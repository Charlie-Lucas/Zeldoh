{% extends "::base.html.twig" %}
{% block body %}
    <div class="logoContainer">
        <img class="logo" src="bundles/zeldohapp/images/logo.png" alt="Zeldoh">
    </div>
    <ul class="map">
        {% for areaLine in map.areaLines %}
            <li class="areaLine">
                <ul class="areas">
                    {% for area in areaLine.areas %}
                        <li class="area">
                            <ul class="coordinateLines">
                                {% for coordinateLine in area.coordinateLines %}
                                    <li class="coordinateLine">
                                        <ul class="coordinates">
                                            {% for coordinate in coordinateLine.coordinates %}
                                                <li class="coordinate" style="background: url('{{ asset(coordinate.ground.background) }}')"></li>
                                            {% endfor %}
                                        </ul>
                                    </li>
                                {% endfor %}
                            </ul>
                        </li>
                    {% endfor %}
                </ul>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
