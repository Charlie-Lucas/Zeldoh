{% extends "::base.html.twig" %}
{% block body %}
	<div class="background">
        {% block header %}{% endblock %}
        	<a href="{{ path("fos_user_registration_register") }}" class="btn btn-primary btnLogin">Inscription</a>
            <div class="logoContainer">
                <img class="logo" src=" {{ asset('bundles/zeldohapp/images/logo.png') }}" alt="Zeldoh">
            </div>
        <div class="container">

			{% trans_default_domain 'FOSUserBundle' %}

			{% block fos_user_content %}
			{% if error %}
			    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			<form action="{{ path("fos_user_security_check") }}" method="post" id="formConnection">
				<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

				<div class="form-group">
				    <label for="username" class="control-label">Pseudo</label>
				    <input type="text" id="username" class="form-control" name="_username" placeholder="Pseudo" value="{{ last_username }}" required="required" />
				</div>
				<div class="form-group">
				    <label for="password" class="control-label">Mot de passe</label>
				    <input type="password" id="password" class="form-control" name="_password" placeholder="Mot de passe" required="required" />
				</div>
				<div class="checkbox">
			    	<label for="remember_me">
			    		<input type="checkbox" id="remember_me" name="_remember_me" value="on" />Se souvenir de moi
			    	</label>
				</div>

			   	<input type="submit" id="_submit" class="btn btn-primary" name="_submit" value="Connexion" />
			</form>
			{% endblock fos_user_content %}
		</div>
	</div>
{% endblock %}